# routes

# misc.
#
*	/		module:secure
GET	/public/	staticDir:public
GET	/favicon.ico	404

# user
#
GET	/User/?			ESEUserController.listUsers
GET /User/listgroups/?	ESEUserController.listGroups
GET /User/listgroups/listusersofgroup/?	ESEUserController.listUsersOfGroup
POST /User/listgroups/?	ESEUserController.addUserToGroup
GET	/User/add/?		ESEUserController.addUser
POST	/User/add/?		ESEUserController.addUserPost
GET	/User/mod/?		ESEUserController.addUser
GET	/User/del/?		ESEUserController.delUser
GET	/User/addgroup/?	ESEUserController.addGroup
POST	/User/addgroup/?	ESEUserController.addGroupPost

# home
#
GET	/							ESEUserController.listCalendars
GET	/{uri_user}/?						ESEUserController.listCalendars
GET	/{uri_user}/{uri_cal}/?					ESECalendarController.lsEvents
GET	/{uri_user}/{uri_cal}/add/?				ESECalendarController.addEvent
POST	/{uri_user}/{uri_cal}/add/?				ESECalendarController.addEventPost
GET	/{uri_user}/{uri_cal}/mod/?				ESECalendarController.modEvent
GET	/{uri_user}/{uri_cal}/del/?				ESECalendarController.delEvent
GET	/{uri_user}/{uri_cal}/{uri_yy}/{uri_mm}/{uri_dd}/?	ESECalendarController.lsEvents
